<body>
    <div class="container">
        <h1 style=color:white>Ewro zu Schilling calculatore</h1>
        <input type="number" id="euro" placeholder="Ewro" step="0.01" min="0">
        <button onclick="convertToSchilling()">Umrechnen</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        function convertToSchilling() {
            const euro = document.getElementById('euro').value;
            if (euro === "") {
                alert("Betrag in Ewro");
                return;
            }
            const schilling = euro * 13.7603;
            document.getElementById('result').innerText = `${euro} Euro = ${schilling.toFixed(2)} Schilling`;
        }
    </script>
